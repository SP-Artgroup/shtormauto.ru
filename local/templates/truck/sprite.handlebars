.sprite::before {
    content: '';
    display: inline-block;
    vertical-align: middle;
    background-image: url({{spritesheet.image}});
}

{{#sprites}}
.sprite-{{name}}::before {
    background-position: {{px.offset_x}} {{px.offset_y}};
    {{#if isHover}}
    {{else}}
    width: {{px.width}};
    height: {{px.height}};
    {{/if}}
}
{{/sprites}}